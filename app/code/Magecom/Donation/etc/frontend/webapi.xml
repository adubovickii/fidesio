<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/donation/:donation/set-donation-information" method="POST">
        <service class="Magecom\Donation\Api\SaveDonationInformationInterface" method="saveDonationInformation"/>

        <resources>
            <resource ref="self" />
        </resources>

        <data>
            <parameter name="donation" force="true">%donation%</parameter>
        </data>
    </route>
</routes>