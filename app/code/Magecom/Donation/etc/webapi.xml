<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/set-donation/:donationCost/:cartId" method="PUT">
        <service class="Magecom\Donation\Api\DonationManagerInterface" method="set"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/delete-donation/:cartId" method="DELETE">
        <service class="Magecom\Donation\Api\DonationManagerInterface" method="remove"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>