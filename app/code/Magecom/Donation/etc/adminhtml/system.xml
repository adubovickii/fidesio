<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="magecom_donation" translate="label" sortOrder="200">
            <label>Donation</label>
        </tab>
        <section id="magecom_donation" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Configuration</label>
            <tab>magecom_donation</tab>
            <resource>Magecom_Donation::admin</resource>
            <group id="general" translate="label" type="text" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Configuration `Donation` module</label>

                <field id="enable_magecom_donation" translate="label comment" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Donation module</label>
                    <comment>You can enable/disable module on this select.</comment>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="magecom_short_text_donation" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                    <comment>Short description for `Donation` module.</comment>
                </field>

                <field id="magecom_long_text_donation" type="editor" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Description</label>
                    <comment>Long description for `Donation` module.</comment>
                </field>

                <field id="magecom_image_donation" type="image" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Logo for `Donation` module</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Image</backend_model>
                    <upload_dir config="system/filesystem/media" scope_info="1">donation</upload_dir>
                    <base_url type="media" scope_info="1">donation</base_url>
                    <comment>Image for `Donation` module.</comment>
                </field>

                <field id="magecom_rates_donation" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Rates for `Donation` module</label>
                    <frontend_model>Magecom\Donation\Block\Adminhtml\Form\Field\Rates</frontend_model>
                    <backend_model>Magecom\Donation\Block\Adminhtml\Form\Field\RatesSerialized</backend_model>
                    <comment>Rates for `Donation` module.</comment>
                </field>
            </group>
        </section>
    </system>
</config>
